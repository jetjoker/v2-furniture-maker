{
  "connection": "default",
  "collectionName": "order",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "totalPrice": {
      "type": "integer"
    },
    "shippingAddress": {
      "type": "string"
    },
    "shippingDate": {
      "type": "date"
    },
    "shippingStatus": {
      "type": "string"
    },
    "note": {
      "type": "text"
    },
    "orderDetails": {
      "collection": "orderdetail",
      "via": "order"
    },
    "user": {
      "model": "user",
      "plugin": "users-permissions"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "confirmed",
        "processing",
        "shipping",
        "done",
        "cancel"
      ]
    },
    "totalDiscount": {
      "type": "integer"
    },
    "depositRequired": {
      "type": "integer"
    },
    "theAmountPaid": {
      "type": "integer"
    },
    "paid": {
      "type": "boolean"
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "promotions": {
      "collection": "promotion",
      "via": "orders"
    },
    "shippingFee": {
      "type": "integer"
    }
  }
}